<section class="hero is-dark">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        Blog
      </h1>
      <h2 class="subtitle">
        Things I have to say.
      </h2>
    </div>
  </div>
</section>

<div id="posts_container" class="skinny_container">
  <% if user_signed_in? && current_user.admin? %>
    <% @unpublished_posts.each do |unpublished_post| %>
      <div class="draft">
        <p class="date"><%= unpublished_post.created_at.strftime('%A, %B %d, %Y') %></p>
        <h2><%= link_to unpublished_post.title, unpublished_post %></h2>
        <hr>
      </div>
    <% end %>
  <% end %>

    <% if @posts.empty? %>
      <div class="post">
        <h4>Whoops! No posts could be found. <br />Please check back soon!</h4>
      </div>
    <% else %>

      <%= render @posts %>

    <% end %>

    <%= will_paginate @posts %>

    <% if user_signed_in? && current_user.admin? %>
      <div class="post">
        <%= link_to "New Post", new_post_path, class: "button" %>
      </div>
    <% end %>
</div>
