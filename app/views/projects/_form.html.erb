<div class="columns">
  <div class="column">
    <%= form_for @project, data: { behavior: "post-form" } do |f| %>
      <% if @project.errors.any? %>
          <h2><%= pluralize(@project.errors.count, "error") %> prevented this project from saving:</h2>
          <ul>
            <% @project.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
      <% end %>

      <% if @project.thumbnail_image %>
        Current Thumbnail <br />
        <%= image_tag(attachment_url(@project, :thumbnail_image, :fill, 768, 180)) %>

        <%= f.check_box :remove_thumbnail_image, class: "checkbox" %>
        <%= f.label :remove_thumbnail_image, class: "checkbox" %>
      <% end %>

      <div class="field">
        <%= f.label :thumbnail, class: "label" %>
        <%= f.attachment_field :thumbnail_image, direct: true, class: "file-input" %>
      </div>

      <div class="field">
        <%= f.label :title, class: "label" %>
        <%= f.text_field :title, class: "control input"%>
      </div>

      <div class="field">
        <%= f.label :description, class: "label" %>
        <%= f.text_area :description, class: "control textarea", data: {behavior: "post-content"}%>
      </div>

      <div class="field">
        <%= f.label :link, class: "label" %>
        <%= f.text_field :link, class: "control input"%>
      </div>

      <%= f.submit "Save Project", class: "button is-primary" %>
    <% end %>
  </div>

  <div class="column">
    <h3>Preview</h3>

    <div id="preview" data-behavior="post-preview">
    </div>
  </div>
</div>
