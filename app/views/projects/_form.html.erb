<%= form_for @project, data: {behavior: 'post-form'} do |f| %>
    <% if @project.errors.any? %>
        <h2><%= pluralize(@project.errors.count, "error") %> prevented this project from saving:</h2>
        <ul>
            <% @project.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
        </ul>
    <% end %>

    <% if @project.thumbnail_image %>
      Current Thumbnail <br />
      <%= image_tag(attachment_url(@project, :thumbnail_image, :fill, 768, 180)) %>

      <%= f.check_box :remove_thumbnail_image %>
      <%= f.label :remove_thumbnail_image %>
    <% end %> <br><br>

    <%= f.label :thumbnail %><br>
    <%= f.attachment_field :thumbnail_image, direct: true %>
    <br><br>
    <%= f.label :title %><br>
    <%= f.text_field :title %>

    <br>
    <br>

    <%= f.label :description %><br>
    <%= f.text_area :description, data: {behavior: 'post-content'} %>

    <br>
    <br>

    <%= f.label :link %><br>
    <%= f.text_field :link %>

    <br>
    <br>

    <%= f.submit %>

<% end %>
<hr>
<h3>Preview</h3>

<div id="preview" data-behavior='post-preview'>
</div>
