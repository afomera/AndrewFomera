<div class="card my-4">
  <div class="card-body">
    <h4 class="card-title">
      <%= link_to project.title, project_path(project) %>
    </h4>
    <p class="card-text">
      <%= markdown truncate("#{project.description}", length: 80) %>
    </p>

    <%= link_to "Read More", project_path(project), class: "card-link" %>

    <% if project.link.present? %>
      <%= link_to "Visit #{project.title}", project.link, class: "card-link", target: "_blank" %>
    <% end %>
  </div>
</div>
