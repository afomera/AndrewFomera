<div id="project_show_content" class="skinny_container container_padding">
  <header>
    <h1><%= @project.title %></h1>
    <hr>
  </header>
  <div id="content">
    <% if @project.has_thumbnail_image? %>
      <%= image_tag(attachment_url(@project, :thumbnail_image, :fill, 768, 180)) %>
    <% end %>

    <%= markdown @project.description %>
  </div>
  <br />
  <% if user_signed_in? && current_user.admin? %>
		<div id="admin_links">
			<%= link_to "Edit Project", edit_project_path(@project) %>
			<%= link_to "Delete Project", project_path(@project), method: :delete, data: { confirm: "Are you sure you want to delete #{@project.title}?" } %>
		</div>
	<% end %>

  <hr>

</div>
